<!-- Include Header -->
<%- include('include/_header') %>

    <!-- Main -->
    <main id="site-main">

        <div class="container">
            <div class="box-nav d-flex justify-between">
                <a href="/add-user" class="border-shadow">
                    <span class="text-gradient">New User <i class="fa fa-user-circle" aria-hidden="true"></i></span>
                </a>
            </div>

            <!-- Form Handling -->
            <form action="/" method="POST">
                <table class="table">
                    <thead class="thead-dark">
                        <tr>
                            <th>ID</th>
